generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

type Comment {
  content    String
  author     String
  created_at DateTime @default(now())
}

model Post {
  id         String   @id @default(auto()) @map("_id") @db.ObjectId
  author     String
  title      String
  content    String
  likes      Int      @default(0)
  created_at DateTime @default(now())

  comments Comment[]
}
